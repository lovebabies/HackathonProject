<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Launcher Screen Theme -->
    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_laucher</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="RegisterSuccessDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/RegisterSuccessDialogAnimation</item>
    </style>

    <style name="RegisterSuccessDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_float_in</item>
        <item name="android:windowExitAnimation">@anim/anim_float_out</item>
    </style>

</resources>
